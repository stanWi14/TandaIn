<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/idImgRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/idNameRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/idImgRest"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/idOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Open :"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/idLocationRestaurant"
            app:layout_constraintStart_toStartOf="@+id/idNameRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/idNameRestaurant"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/idHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/idLocationRestaurant"
            app:layout_constraintStart_toStartOf="@+id/idOpen" />

        <TextView
            android:id="@+id/idLocationRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Location :"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/idNameRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/idNameRestaurant" />

        <TextView
            android:id="@+id/idAddRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Address"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/idLocationRestaurant"
            app:layout_constraintTop_toBottomOf="@+id/idLocationRestaurant" />

        <Button
            android:id="@+id/idBtnSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="10dp"
            android:text="See More"
            android:textAllCaps="false"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>